<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.demo.llmplugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>LLMPlugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="17396248231@163.com" url="https://www.yourcompany.com">no</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        <h1>Local AI Code Assistant</h1>
        <p>This plugin lets you:</p>
        <ul>
            <li>Explain code with local LLMs (Qwen, Llama)</li>
            <li>Generate tests offline</li>
            <li>No data leaves your machine</li>
        </ul>
        <p>Supports <b>Ollama</b>, <b>LM Studio</b>, and custom APIs.</p>
    ]]></description>


    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>


    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 配置页面 -->
        <applicationConfigurable
            parentId="tools"
            instance="org.demo.llmplugin.LocalLLMConfigurable"
            id="org.demo.llmplugin.LocalLLMConfigurable"
            displayName="Local LLM"/>

        <!-- 设置存储 -->
        <applicationService serviceImplementation="org.demo.llmplugin.LocalLLMSettings"/>

        <!-- MCP服务 -->
        <projectService serviceImplementation="org.demo.llmplugin.mcp.MCPManagerService"/>

        <!-- 右侧边栏聊天工具窗口 -->
        <toolWindow id="LLM Chat" secondary="true" anchor="right" factoryClass="org.demo.llmplugin.ChatToolWindowFactory"/>
    </extensions>

    <!-- 可选：顶部菜单栏添加“Ask AI” -->
    <actions>
        <!-- 可选：添加菜单项 -->
        <!-- 定义 Group -->
        <group id="LocalLLMGroup" class="org.demo.llmplugin.LocalLLMGroup" popup="true">
            <action id="ExplainCodeAction"
                    class="org.demo.llmplugin.ExplainCodeAction"
                    text="Explain Code" description="Explain Code"
                    icon="AllIcons.Actions.Help"/>
            <action id="RefactorWithLLM"
                    class="org.demo.llmplugin.RefactorWithLLMAction"
                    text="Refactor with LLM"
                    description="Modify selected code using AI"
                    icon="AllIcons.Actions.Edit"/>
            <action id="GenerateUnitTest"
                    class="org.demo.llmplugin.GenerateUnitTestAction"
                    text="Generate Unit Test"
                    description="Generate unit test for selected code"
                    icon="AllIcons.Actions.Lightning"/>
        </group>

        <!-- 将 Group 添加到编辑器右键菜单 -->
        <action id="LocalLLMGroup.Action" class="org.demo.llmplugin.LocalLLMGroup">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>